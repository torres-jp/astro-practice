---
import { type APISpaceX } from '../types/api'
import CardLaunch from './CardLaunch.astro'

const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
    },
    body: JSON.stringify({
        query: {},
        options: {
            sort: {
                date: 'asc',
            },
            limit: 12,
        },
    }),
})
const { docs: launches } = (await res.json()) as APISpaceX
console.log(launches)
---

<div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
    {
        launches.map(
            ({ id, details, links, success, flight_number: fligthNumber }) => (
                <CardLaunch
                    id={id}
                    img={links.patch.small}
                    details={details}
                    fligthNumber={fligthNumber}
                    success={success}
                />
            ),
        )
    }
</div>

